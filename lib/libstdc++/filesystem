#pragma once

#include <string>
#include <list>

namespace std::filesystem
{
    class path
    {
    public:
        using value_type = char;
        using string_type = std::basic_string<value_type>;
        static constexpr value_type preferred_separator = '/';

        enum format
        {
            native_format,
            generic_format,
            auto_format
        };

        path& operator=(string_type&& p) { _p = p; }

    private:
        std::list<string_type> _components;
    };
}
